<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping 
	package="com.beans">

	<class name="Teacher" table="t_teacher">
		<id name="id">
			<generator class="native"/>
		</id>

		<property name="teacher_id" type="java.lang.String" length="40"/>

		<property name="teacher_no" type="java.lang.String" length="20"/>

		<property name="college_name" type="java.lang.String" length="20"/>

		<property name="major_name" type="java.lang.String" length="20"/>

		<property name="tel_no" type="java.lang.String" length="15"/>

		<property name="qq_no" type="java.lang.String" length="15"/>

		<property name="name" type="java.lang.String" length="15" column="name"/>

		<property name="email" type="java.lang.String" length="20"/>

		<property name="uid" type="java.lang.String" length="40"/>

		<property name="status" type="int" />
	</class>
	
</hibernate-mapping>