<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping 
	package="com.beans">

	<class name="User" table="t_users">
		<id name="id">
			<generator class="native"/>
		</id>

		<property name="password" type="java.lang.String" length="30"/>
		
		<property name="username" type="java.lang.String" length="30"/>

		<property name="type" type="int" length="2"/>

		<property name="status" type="int"/>

		<property name="user_id" type="java.lang.String" length="40"/>

	</class>
	
</hibernate-mapping>